<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/id_form_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#bebebe"
        android:text="@string/hello_world"
        android:textColor="#f5f5f5"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

       <com.left.indoor.myview.RoundImageView 
           android:id="@+id/user_from_photo"
           android:layout_width="49dp"
           android:layout_height="49dp"
           android:src="@drawable/cityheatmap"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="10dp"
           android:contentDescription="@string/hello_world"/>
       
        <TextView
            android:id="@+id/id_from_msg_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_from_photo"
            android:background="@drawable/chatfrom_bg_focused"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/hello_world" />
    </RelativeLayout>

</LinearLayout>